[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[user]
	name = Pawel Reich

[merge]
    conflictstyle = zdiff3

[absorb]
    maxStack=50

[rerere]
    enabled = true
    autoupdate = true

[difftool]
    prompt = false

[pager]
    difftool = true

[diff]
    tool = difftastic
